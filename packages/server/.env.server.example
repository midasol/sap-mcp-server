# SAP MCP Server - Environment Configuration Example
# Copy this file to .env.server and fill in your actual SAP credentials
# IMPORTANT: Never commit .env.server with real credentials to git!

# ============================================================
# SAP Gateway Connection Settings
# ============================================================

# SAP Gateway host (without protocol)
# Example: sap-gateway.company.com or 192.168.1.100
SAP_HOST=your-sap-host.com

# SAP Gateway port
# Standard ports: 443 (HTTPS), 8000 (HTTP), 44300 (HTTPS with client cert)
SAP_PORT=443

# SAP system client number (3 digits)
# Example: 100, 800, etc.
SAP_CLIENT=100

# SAP username for authentication
SAP_USERNAME=your-username

# SAP password for authentication
# SECURITY: Use environment-specific passwords, rotate regularly
SAP_PASSWORD=your-password

# ============================================================
# Security & SSL Settings
# ============================================================

# SSL/TLS certificate verification
# Options: true (recommended for production), false (development only)
SAP_VERIFY_SSL=true

# Path to custom CA certificate bundle (optional)
# Leave empty to use system default certificates
# Example: /path/to/ca-bundle.crt
SAP_CA_BUNDLE=

# ============================================================
# Connection & Performance Settings
# ============================================================

# Request timeout in seconds
# Recommended: 30-60 for normal operations, higher for large data queries
SAP_TIMEOUT=30

# Maximum number of retry attempts for failed requests
# Recommended: 3
SAP_MAX_RETRIES=3

# Connection pool size (for concurrent requests)
# Recommended: 10-50 depending on load
SAP_POOL_SIZE=10

# ============================================================
# Logging Configuration
# ============================================================

# Log level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable JSON logging (recommended for production)
# Options: true (JSON format), false (console format with colors)
LOG_JSON=false

# Include timestamps in logs
# Options: true, false
LOG_TIMESTAMP=true

# ============================================================
# MCP Server Settings
# ============================================================

# Server name (displayed in MCP protocol)
MCP_SERVER_NAME=sap-mcp

# Server version
MCP_SERVER_VERSION=0.2.0

# ============================================================
# Optional: Service Configuration
# ============================================================

# Path to services.yaml file (optional)
# If not specified, will look in default locations:
# - ./services.yaml
# - ../services.yaml
# - ../../services.yaml
# SERVICES_CONFIG_PATH=/path/to/services.yaml

# ============================================================
# Optional: Development Settings
# ============================================================

# Enable development mode (more verbose logging, relaxed security)
# Options: true, false
# WARNING: Never enable in production!
# DEV_MODE=false

# Enable request/response logging (useful for debugging)
# Options: true, false
# WARNING: May log sensitive data, use carefully
# LOG_REQUESTS=false

# ============================================================
# Example Configurations
# ============================================================

# Development Environment Example:
# SAP_HOST=dev-sap.company.local
# SAP_PORT=8000
# SAP_CLIENT=100
# SAP_USERNAME=developer
# SAP_PASSWORD=dev-password
# SAP_VERIFY_SSL=false
# LOG_LEVEL=DEBUG
# LOG_JSON=false

# Production Environment Example:
# SAP_HOST=sap-gateway.company.com
# SAP_PORT=443
# SAP_CLIENT=800
# SAP_USERNAME=prod-service-account
# SAP_PASSWORD=<use-secrets-manager>
# SAP_VERIFY_SSL=true
# SAP_CA_BUNDLE=/etc/ssl/certs/company-ca.crt
# LOG_LEVEL=INFO
# LOG_JSON=true
# LOG_TIMESTAMP=true
