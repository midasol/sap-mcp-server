# SAP MCP Server Configuration
# Copy this file to .env.server and fill in your actual SAP credentials

# ==========================================
# SAP Gateway Connection (REQUIRED)
# ==========================================
SAP_HOST=your-sap-server.com
SAP_PORT=44300
SAP_CLIENT=100
SAP_USERNAME=your_username
SAP_PASSWORD=your_password

# SAP Connection Settings
SAP_VERIFY_SSL=false        # Set to true for production with valid SSL certificates
SAP_TIMEOUT=30              # Request timeout in seconds
SAP_RETRY_ATTEMPTS=3        # Number of retry attempts for failed requests

# ==========================================
# MCP Server Configuration (OPTIONAL)
# ==========================================
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR, CRITICAL
MCP_MAX_WORKERS=1
MCP_DEBUG=false
MCP_RELOAD=false

# YAML Service Configuration
# MCP_SERVICES_CONFIG_PATH=/path/to/custom/services.yaml  # Optional: Custom YAML configuration file path
                                                           # Default: config/services.yaml (relative to package)

# ==========================================
# Security Configuration (OPTIONAL)
# ==========================================
SECURITY_SESSION_TIMEOUT=3600
SECURITY_MAX_CONCURRENT_SESSIONS=100
SECURITY_RATE_LIMIT_PER_MINUTE=60
# SECURITY_ENCRYPTION_KEY=your_encryption_key_here
