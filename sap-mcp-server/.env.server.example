# SAP MCP Server Configuration Template
# Copy this file to .env.server and fill in your actual SAP credentials

# ==========================================
# SAP Gateway Connection (REQUIRED)
# ==========================================
SAP_HOST=your-sap-server.com
SAP_PORT=44300
SAP_CLIENT=100
SAP_USERNAME=your_username
SAP_PASSWORD=your_password

# SAP Connection Settings
# Set to true for production with valid SSL certificates
SAP_VERIFY_SSL=false
# Request timeout in seconds
SAP_TIMEOUT=30
# Number of retry attempts for failed requests
SAP_RETRY_ATTEMPTS=3

# ==========================================
# MCP Server Configuration (OPTIONAL)
# ==========================================
MCP_HOST=0.0.0.0
MCP_PORT=8000
# DEBUG, INFO, WARNING, ERROR, CRITICAL
MCP_LOG_LEVEL=INFO
MCP_MAX_WORKERS=1
MCP_DEBUG=false
MCP_RELOAD=false

# YAML Service Configuration
# Optional: Custom YAML configuration file path
# Default: config/services.yaml (relative to package)
# MCP_SERVICES_CONFIG_PATH=/path/to/custom/services.yaml

# ==========================================
# Security Configuration (OPTIONAL)
# ==========================================
SECURITY_SESSION_TIMEOUT=3600
SECURITY_MAX_CONCURRENT_SESSIONS=100
SECURITY_RATE_LIMIT_PER_MINUTE=60
# SECURITY_ENCRYPTION_KEY=your_encryption_key_here
